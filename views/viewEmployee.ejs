                            </div>
                              <div class="panel-body">
                           
                             <div id="container1" style="min-width: 110px; height: auto; margin: 0 auto">
                             
                             <div id="tab1">
                             <%if(session.getAttribute("empList") != null){ %>
                             
                             <table id="details" class="table table-striped table-bordered">
                             	<thead><tr><th>Employee Name</th><th>Bill Number</th><th></th></tr></thead>
								<tbody>
									<%EmployeeBean[] employeesList = (EmployeeBean[])session.getAttribute("empList");
									 for(int i=0; i< employeesList.length; i++){ %>
										<tr><td><%=employeesList[i].getFirstName() %> <%=employeesList[i].getLastName() %></td>
										<td><%=employeesList[i].getBillNo() %></td> 
										<td><%if(employeesList[i].isFraudulent()){%>
