    <div id="myModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
			<div class="modal-header" style="background-color:#99CCFF;">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Fraud Details</h4>
			</div>
			<div class="modal-body">
			<table style="width:100%">
			<tr style="height:40px;">
			<td style="width:50%;color:#337ab7;">
			<label for="billNo">Bill Number:</label>
			</td>
			<td>
			<span id="billNo"></span>
			</td>
			</tr>
			<tr style="height:40px">
			<td style="color:#337ab7;">
			<label for="descr">Diagnosis:</label>
			</td>
			<td>
			<span id="descr"></span>
			</td>
			</tr>
			<tr style="height:40px">
			<td style="color:#337ab7;">
			<label for="actalCost">Actual Cost of the Diagnosis:</label>
			</td>
			<td>
			<span id="actualCost"></span>
			</td>
			</tr>
			<tr style="height:40px">
			<td style="color:#337ab7;">
			<label for="empCost">Cost claimed:</label>
			</td>
			<td style="color:red">
			<span id="empCost"></span>
			</td>
			</tr>
			</table>
			</div>
			<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal" style="background-color:#99CCFF;">Close</button>                
			</div>
			
		</div>
		
