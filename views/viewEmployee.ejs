<script>
$(document).ready(function() {
	$('body').on('click', '.redFlag',function(e) {
			var fraudStr = $(this).parent().attr("id");
			var detailsArray = fraudStr.split(",");
			for(var i=0;i<detailsArray.length;i++)
			{
				if(detailsArray[i].split(":")[0] == "billNo")
				{
					$("#billNo").text(detailsArray[i].split(":")[1]);
				}
				else if(detailsArray[i].split(":")[0] == "diagnosis")
				{
					$("#descr").text(detailsArray[i].split(":")[1]);
				}
				else if(detailsArray[i].split(":")[0] == "actualCost")
				{
					$("#actualCost").text("$"+detailsArray[i].split(":")[1]);
				}
				else if(detailsArray[i].split(":")[0] == "billAmt")
				{
					$("#empCost").text("$"+detailsArray[i].split(":")[1]);
				}
			}
			
	});				
});
</script>
